{
  "compilerOptions": {
    "allowJs": false,
    "lib": ["es2015", "es2017","DOM"],
    "module": "esNext",
    "moduleResolution": "node",
    "target": "es2017",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "pretty": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./.output",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": [
    "app/**/*"
  ],
  "compileOnSave": true
}